<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppTracker"
             x:Class="AppTracker.MainPage">
    <ContentPage.Content>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button BackgroundColor="Blue" TextColor="Black" Text="{{x:Static local:MainPage.APP1NAME}}" Grid.Row="0" Grid.Column="0" />
            <Button BackgroundColor="Red" Text="{Binding app2}" Grid.Row="0" Grid.Column="1" />
            <Button BackgroundColor="Purple" Text="{Binding app3}" Grid.Row="1" Grid.Column="0" />
            <Button BackgroundColor="Green" Text="{Binding app4}" Grid.Row="1" Grid.Column="1" />
            <Button BackgroundColor="Purple" Text="{Binding app5}" Grid.Row="2" Grid.Column="0" />
            <Button BackgroundColor="Green" Text="{Binding app6}" Grid.Row="2" Grid.Column="1" />
        </Grid>
    </ContentPage.Content>
</ContentPage>


